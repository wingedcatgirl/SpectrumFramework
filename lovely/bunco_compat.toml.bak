[manifest]
version = "1.0.0"
dump_lua = true
priority = 11

# Enable exotics when any spectrum is detected
[[patches]]
[patches.pattern]
target = 'functions/state_events.lua'
pattern = '''

if text == 'bunc_Spectrum'
or text == 'bunc_Straight Spectrum'
or text == 'bunc_Spectrum House'
or text == 'bunc_Spectrum Five' then
    enable_exotics()
    unlock_card(G.P_CENTERS.b_bunc_fairy)
end

'''
position = 'at'
match_indent = true
payload = '''

if string.find(text, "Spectrum") then
    enable_exotics()
    unlock_card(G.P_CENTERS.b_bunc_fairy)
end

'''